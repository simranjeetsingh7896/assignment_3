@model IEnumerable<assignment_3.Models.Teacher>
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<p>This page shows information about all teachers</p>

<div id="containerlist">
    <h2>LIST OF TEACHERS</h2>
    <form action="/Teacher/List" method="GET">
        <input type="text" name="SearchKey"/>
        <input type="submit" value="Search"/>

    </form>
    
    @foreach (var teacher in Model)
    {
        <div class="listitem row">
            <div class="col-md-2"><a href="/Teacher/Show/@teacher.TeacherId">@teacher.TeacherFname @teacher.TeacherLname</a></div>
        </div>
    }
</div>